{
  "name": "FTAPI Dev Helper",
  "version": "1.1",
  "description": "Utility extension for FTAPI development with different functionality",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "https://testing.ftapi.com:8443/*"
  ],

  "background": {
    "service_worker": "SecuTransferErrorPage/background.js"
  },

  "action": {
    "default_popup": "settings/popup.html"
  },

  "content_scripts": [
    {
      "matches": [
        "https://github.com/FTAPI-Software/*/pull/*"
      ],
      "js": [
        "shared/polyfill.js",
        "PullRequestButton/github-button.js"
      ]
    },
    {
      "matches": [
        "https://ci.ftapi.dev/*"
      ],
      "js": [
        "shared/polyfill.js",
        "PullRequestButton/jenkins-check.js"
      ]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "shared/polyfill.js",
        "SecuTransferErrorPage/errorPage.html",
        "SecuTransferErrorPage/errorPage.js",
        "SecuTransferErrorPage/errorPage.css"
      ],
      "matches": [ "<all_urls>" ]
    }
  ]
}